{% doc %}
  @prompt
    a section, where the text sliding from left to right and be in genz color
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sliding-text-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-sliding-text-track-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-slide-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-sliding-text-item-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    white-space: nowrap;
    padding: 0 {{ block.settings.spacing }}px;
    display: flex;
    align-items: center;
  }

  .ai-sliding-text-separator-{{ ai_gen_id }} {
    width: {{ block.settings.separator_size }}px;
    height: {{ block.settings.separator_size }}px;
    background-color: {{ block.settings.separator_color }};
    border-radius: 50%;
    margin: 0 {{ block.settings.spacing }}px;
  }

  @keyframes ai-slide-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-sliding-text-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<sliding-text-{{ ai_gen_id }} class="ai-sliding-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-sliding-text-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% if block.settings.text_1 != blank %}
        <div class="ai-sliding-text-item-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
        {% if block.settings.show_separator %}
          <div class="ai-sliding-text-separator-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
      {% if block.settings.text_2 != blank %}
        <div class="ai-sliding-text-item-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
        {% if block.settings.show_separator %}
          <div class="ai-sliding-text-separator-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
      {% if block.settings.text_3 != blank %}
        <div class="ai-sliding-text-item-{{ ai_gen_id }}">{{ block.settings.text_3 }}</div>
        {% if block.settings.show_separator %}
          <div class="ai-sliding-text-separator-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
      {% if block.settings.text_4 != blank %}
        <div class="ai-sliding-text-item-{{ ai_gen_id }}">{{ block.settings.text_4 }}</div>
        {% if block.settings.show_separator %}
          <div class="ai-sliding-text-separator-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
      {% if block.settings.text_5 != blank %}
        <div class="ai-sliding-text-item-{{ ai_gen_id }}">{{ block.settings.text_5 }}</div>
        {% if block.settings.show_separator %}
          <div class="ai-sliding-text-separator-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</sliding-text-{{ ai_gen_id }}>

<script>
  (function() {
    class SlidingText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const track = this.querySelector('.ai-sliding-text-track-{{ ai_gen_id }}');
        if (track) {
          track.addEventListener('mouseenter', () => {
            track.style.animationPlayState = 'paused';
          });
          track.addEventListener('mouseleave', () => {
            track.style.animationPlayState = 'running';
          });
        }
      }
    }

    customElements.define('sliding-text-{{ ai_gen_id }}', SlidingText{{ ai_gen_id }});
  })();
</script>

